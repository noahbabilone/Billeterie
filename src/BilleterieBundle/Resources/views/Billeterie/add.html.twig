{% extends "BilleterieBundle::layout.html.twig" %}

{% block title %}
    Add Post - {{ parent() }}
{% endblock %}

{% block body_billeterie %}
    <section id="home">
        <div id="main-slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('bundles/billeterie/images/slider/bg4.jpg') }}"
                         alt="slider">
                </div>
            </div>
        </div>
    </section>

    <section id="post">
        <div id="twitter-feed" class="carousel slide" data-interval="false">
            <div class="row">
                <h1>Add Post</h1>

                {{ form_start(form) }}
                <div class="post col-md-12">

                    <div class="form-group ">
                        {{ form_label(form.titre, "Titre :", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget (form.titre) }}

                    </div>
                    <div class="form-group ">
                        {{ form_label(form.description, "Description :", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget (form.description) }}

                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-sm-3">
                                {{ form_widget (form.save,{'attr':{'class':'form-control btn-sm'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}


            </div>
        </div>
    </section><!--/#twitter-feed-->



{% endblock %}

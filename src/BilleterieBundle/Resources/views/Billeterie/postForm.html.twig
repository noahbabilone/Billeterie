{% extends "BilleterieBundle::layout.html.twig" %}

{% block title %}
    Add Post - {{ parent() }}
{% endblock %}

{% block body_billeterie %}
    <section id="home">
        <div id="main-slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('bundles/billeterie/images/slider/bg4.jpg') }}"
                         alt="slider">
                </div>
            </div>
        </div>
    </section>

    <section id="post">
        <div id="twitter-feed" class="carousel slide" data-interval="false">
            <div class="row">


                {{ form_start(form) }}
                <div class="post col-md-12">
                    {% if post is null %}
                        <h1>Add Post</h1>
                    {% else %}
                        <h1>Edit Post</h1>
                    {% endif %}

                    <div class="form-group ">
                        {% if modified is defined %}
                            {% if modified %}
                                <div class="alert alert-success alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                                aria-hidden="true">&times;</span></button>
                                    <p>Votre dmofication a été enregristrée ! Better check yourself, you're not looking
                                        too
                                        good.</p>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="form-group ">
                        {{ form_label(form.titre, "Titre :", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget (form.titre) }}

                    </div>
                    <div class="form-group ">
                        {{ form_label(form.description, "Description :", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget (form.description) }}

                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-sm-3">
                                {{ form_widget (form.save,{'attr':{'class':'form-control btn-sm'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}


            </div>
        </div>
    </section><!--/#twitter-feed-->



{% endblock %}
